pragma solidity ^0.8.17;

import "./7.sol";

contract ImportsExercise {
    using SillyStringUtils for string;

    SillyStringUtils.Haiku public haiku;

    function saveHaiku(string memory line1, string memory line2, string memory line3) public {
        haiku = SillyStringUtils.Haiku(line1, line2, line3);
    }

    function getHaiku() public view returns (SillyStringUtils.Haiku memory) {
        return haiku;
    }

    function shruggieHaiku() public view returns (SillyStringUtils.Haiku memory) {
        SillyStringUtils.Haiku memory modifiedHaiku = haiku;
        modifiedHaiku.line3 = modifiedHaiku.line3.shruggie();
        return modifiedHaiku;
    }
}
